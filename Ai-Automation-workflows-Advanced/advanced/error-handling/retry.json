{
  "name": "Retry Pattern",
  "nodes": [
    {
      "name": "Webhook",
      "type": "n8n-nodes-base.webhook",
      "typeVersion": 1,
      "position": [
        100,
        300
      ],
      "parameters": {
        "path": "retry",
        "httpMethod": "POST"
      }
    },
    {
      "name": "HTTP Call",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 1,
      "position": [
        350,
        300
      ],
      "parameters": {
        "url": "https://unstable-api"
      }
    },
    {
      "name": "Slack Error",
      "type": "n8n-nodes-base.slack",
      "typeVersion": 1,
      "position": [
        600,
        300
      ],
      "parameters": {
        "channel": "#errors",
        "text": "Retry executed"
      }
    }
  ],
  "connections": {
    "Webhook": {
      "main": [
        [
          {
            "node": "HTTP Call",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "HTTP Call": {
      "main": [
        [
          {
            "node": "Slack Error",
            "type": "main",
            "index": 0
          }
        ]
      ]
    }
  }
}